<div class="demo-section">
    <div class="demo-h3">Type: Radio</div>
    <%=JST.demo_show(JST.demoCheckboxes_radio())%>
</div>

<div class="demo-section">
    <div class="demo-h3">Type: Checkbox</div>
    <%=JST.demo_show(JST.demoCheckboxes_check())%>
</div>

<div class="demo-section">
    <div class="demo-h3">
        Size: S
        <span class="demo-code demo-code_small">.nb-checkbox_size_s</span>
    </div>
    <%=JST.demo_show(JST.demoCheckboxes_small())%>
</div>

/* radio */
